<?xml version="1.0" encoding="UTF-8"?>

<!--
 Configuration 가장 최상위 요소이다.
 	status 속성은 log4j 내부 이벤트에 대한 로그 레벨을 의미한다.
 -->
<Configuration status="DEBUG">
	<!--  로그의 출력 위치를 정하는 요소이다. (콘솔, 파일, DB, OutputStream 등등) -->
	<Appenders>
	<!--  콘솔에 로그 메시지를 출력한다. -->
		<Console name="console" target="SYSTEM_OUT">
			<!-- 로그의 출력 포맷을 지정한다. -->
			<PatternLayout pattern="[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %c{5} %M - %msg - %n"/>
		</Console>
		<!-- 파일에 로그 메시지를 출력한다. -->
		<File name="file" fileName="./logs/member_log.txt">
			<PatternLayout pattern="[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %c{5} %M - %msg - %n"/>
		</File>
		
		<File name="file2" fileName="./logs/board_log.txt">
			<PatternLayout pattern="[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %c{5} %M - %msg - %n"/>
		</File>
	</Appenders>
	<!-- 로깅이 일어나는 부분을 그룹화하는 역할을 한다. -->
	<!-- FATAL > ERROR > WARN > INFO > DEBUG > TRACE-->
	<Loggers>
		<!-- 일반적인 로그 정책을 의미한다. -->
		<Root level="DEBUG">
			 <AppenderRef ref="console"/>
			 <!-- 
			 <AppenderRef ref="file"/>
			 -->
		</Root>
		
		<!-- 추가로 필요한 로그 정책을 정의한다. -->
		<Logger name="com.kh.mybatis.member" level="DEBUG">
			<AppenderRef ref="file" />
		</Logger>
		
		<Logger name="com.kh.mybatis.board" level="INFO">
			<AppenderRef ref="file2" />
		</Logger>
	</Loggers>
	
</Configuration>